[user]
    name = JesusMtnez
    email = jesusmartinez93@gmail.com
[core]
    editor = emacs -nw
    autocrlf = input
    excludesfile = ~/.gitignore
    whitespace = trailing-space, blank-at-eol, tabs-in-indent
[push]
    default = matching
[default]
    push = matching
[color]
    ui = auto
[alias]
    s = status
    sa = status --ignored
    co = checkout
    a = add
    aa = add --all
    ap = add --patch
    c = commit --verbose
    ca = commit -a
    cm = commit -m
    cma = commit -a -m
    cam = commit --amend
    ps = push
    pl = pull
    cl = clone
    t = tag
    ra = remote add
    rr = remote rm
    rp = remote prune
    rpo = remote prune origin
    b = branch
    br = branch -r
    ba = branch -a
    bs = branch-status
    bu = branch -u
    l = log -2
    t = log --graph --pretty=format:'%C(yellow)%h%Creset%C(auto)%d%Creset %s %Cblue(%an)%Creset %Cgreen(%cr)%Creset' --abbrev-commit --all
    d = diff
    dc = diff --cached
    df = "!f() { git --no-pager diff $@; }; f"
    dfc = "!f() { git --no-pager diff --cached $@; }; f"
    f = fetch
    fa = fetch --all
    m = merge
    su = submodule foreach git pull origin master
[pager]
    diff = diff-so-fancy | less --tabs=4 -RFX
    show = diff-so-fancy | less --tabs=4 -RFX
