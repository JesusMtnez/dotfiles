#!/usr/bin/env bash
#
# Generates metals-emacs binary in `$HOME/.local/bin`

coursier=/tmp/coursier
metalsVersion=$(curl -s https://oss.sonatype.org/content/repositories/snapshots/org/scalameta/metals_2.12/ | grep -oP "\d\.\d\.\d\+[\d]+\-[a-z0-9]+\-SNAPSHOT" | uniq | sort -t+ -k 1,1 -k 2,2n | tail -n1)
metalsLocation=$HOME/.local/bin/metals-emacs


echo "Metals Version: $metalsVersion"
echo "Metals Location: $metalsLocation"

# Get coursier latest version
curl -sL -o $coursier https://git.io/coursier
chmod +x $coursier

# Clean old metals
rm $metalsLocation

# Generate `metals-emacs` executable
$coursier bootstrap \
  --java-opt -Xss4m \
  --java-opt -Xms100m \
  --java-opt -Dmetals.client=emacs \
  org.scalameta:metals_2.12:$metalsVersion \
  -r sonatype:snapshots \
  -o $metalsLocation -f
